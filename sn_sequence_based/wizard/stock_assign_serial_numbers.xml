<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_view_assign_serial_numbers_production" model="ir.ui.view">
        <field name="name">assign.serial.numbers.inherit.view</field>
        <field name="model">stock.assign.serial</field>
        <field name="inherit_id" ref="mrp.view_assign_serial_numbers_production"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='next_serial_number']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='next_serial_count']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='next_serial_count']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='produced_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='expected_qty']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='serial_numbers']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>