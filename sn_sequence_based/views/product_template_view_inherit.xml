<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="inherit_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tracking']" position="after">
                <field name="product_serial_id" invisible="tracking != 'serial'"/>
            </xpath>
        </field>
    </record>
</odoo>